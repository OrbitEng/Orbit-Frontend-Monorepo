{
  "name": "turborepo-basic-yarn",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "bundledDependencies": [
    "orbit-clients"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "^1.4.3"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.25.0",
    "orbit-clients": "file:packages/orbit-clients",
    "data-transfer-clients": "file:packages/data-transfer-clients",
    "browser-clients": "file:packages/browser-clients"

  }
}
